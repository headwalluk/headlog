# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=headlog
DB_USER=headlog_user
DB_PASSWORD=your_secure_password

# Server Configuration
PORT=3000
NODE_ENV=development

# Housekeeping Configuration
LOG_RETENTION_DAYS=30
INACTIVE_WEBSITE_DAYS=45

# Logging
LOG_LEVEL=info

# Migrations
# Set to true to disable automatic migration execution on server startup
# When disabled, you must manually run: node cli.js schema:migrate
AUTO_RUN_MIGRATIONS_DISABLED=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW='1 minute'
RATE_LIMIT_CACHE=10000
RATE_LIMIT_ALLOWLIST=127.0.0.1,::1

# Security
SKIP_DOTENV_PERMISSION_CHECK=false

# Hierarchical Aggregation (Optional - for multi-datacenter deployments)
# Enable upstream log forwarding to a central aggregation server
UPSTREAM_ENABLED=false
UPSTREAM_SERVER=https://central.example.com
UPSTREAM_API_KEY=your_api_key_here
UPSTREAM_BATCH_SIZE=1000
UPSTREAM_BATCH_INTERVAL=60
UPSTREAM_BATCH_SIZE_MIN=0.2
UPSTREAM_BATCH_SIZE_RECOVERY=0.1
UPSTREAM_COMPRESSION=true
INSTANCE_NAME=regional-datacenter-1

