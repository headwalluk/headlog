{
  "name": "headlog",
  "version": "1.8.2",
  "description": "Centralised Apache log aggregation system",
  "main": "src/server.js",
  "scripts": {
    "start": "NODE_ENV=production node src/server.js",
    "dev": "NODE_ENV=development nodemon src/server.js",
    "cli": "node cli.js",
    "migrate": "node cli.js schema:migrate",
    "migrate:status": "node cli.js schema:status",
    "migrate:history": "node cli.js schema:history",
    "test": "node tests/api.test.js --type=complete",
    "test:quick": "node tests/api.test.js --type=quick",
    "test:complete": "node tests/api.test.js --type=complete",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\""
  },
  "keywords": [
    "logs",
    "apache",
    "aggregation",
    "monitoring",
    "fluent-bit"
  ],
  "author": "Paul Faulkner <paul@headwall.tech>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@fastify/compress": "^8.0.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/session": "^11.1.1",
    "@fastify/static": "^8.3.0",
    "@fastify/view": "^11.1.1",
    "bcrypt": "^6.0.0",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "fastify": "^5.1.0",
    "inquirer": "^13.0.2",
    "mysql2": "^3.11.5",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "eslint": "^9.16.0",
    "nodemon": "^3.1.7",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.4.2"
  }
}
