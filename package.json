{
  "name": "headlog",
  "version": "1.3.0",
  "description": "Centralised Apache log aggregation system",
  "main": "src/server.js",
  "scripts": {
    "start": "NODE_ENV=production node src/server.js",
    "dev": "NODE_ENV=development nodemon src/server.js",
    "cli": "node cli.js",
    "migrate": "node cli.js schema:migrate",
    "migrate:status": "node cli.js schema:status",
    "migrate:history": "node cli.js schema:history",
    "test": "node tests/api.test.js --type=complete",
    "test:quick": "node tests/api.test.js --type=quick",
    "test:complete": "node tests/api.test.js --type=complete",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\""
  },
  "keywords": [
    "logs",
    "apache",
    "aggregation",
    "monitoring",
    "fluent-bit"
  ],
  "author": "Paul Faulkner <paul@headwall.tech>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@fastify/compress": "^8.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "bcrypt": "^6.0.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.1.0",
    "mysql2": "^3.11.5",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "eslint": "^9.16.0",
    "nodemon": "^3.1.7",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2"
  }
}
