<%- include('../partials/head', { title: 'Roles' }) %>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('../partials/header') %>
    </div>
    <div class="row">
      <%- include('../partials/sidebar', { user, navigationMenu, currentPath: '/roles' }) %>
      
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <!-- Page Header -->
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">
            <i class="bi bi-shield-lock"></i> Roles
          </h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <% if (user.is_superuser || user.capabilities.includes('roles:write')) { %>
              <a href="/roles/new" class="btn btn-sm btn-primary text-nowrap">
                <i class="bi bi-plus-circle"></i> Create Role
              </a>
            <% } %>
          </div>
        </div>

        <!-- Results Summary -->
        <div class="row mb-3">
          <div class="col-md-12">
            <p class="text-muted">
              Showing <%= roles.length %> of <%= totalCount.toLocaleString() %> roles
            </p>
          </div>
        </div>

        <!-- Roles Table -->
        <% if (roles.length === 0) { %>
          <!-- Empty State -->
          <div class="text-center py-5">
            <i class="bi bi-shield-lock" style="font-size: 4rem; color: #ccc;"></i>
            <h3 class="mt-3">No Roles Found</h3>
            <p class="text-muted">
              There are no roles in the system.
            </p>
            <% if (user.is_superuser || user.capabilities.includes('roles:write')) { %>
              <a href="/roles/new" class="btn btn-primary">Create Role</a>
            <% } %>
          </div>
        <% } else { %>
          <!-- Data Table -->
          <div class="table-responsive">
            <table class="table table-hover table-striped">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Type</th>
                  <th>Capabilities</th>
                  <th>Users</th>
                  <th>Created</th>
                  <th class="text-end">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% roles.forEach(role => { %>
                <tr>
                  <td>
                    <a href="/roles/<%= role.id %>">
                      <i class="bi bi-shield-lock text-primary me-1"></i>
                      <strong><%= role.name %></strong>
                    </a>
                  </td>
                  <td><%= role.description %></td>
                  <td>
                    <% if (role.is_system) { %>
                      <span class="badge bg-secondary">System</span>
                    <% } else { %>
                      <span class="badge bg-info">Custom</span>
                    <% } %>
                  </td>
                  <td>
                    <span class="badge bg-primary"><%= role.capability_count || 0 %></span>
                  </td>
                  <td>
                    <% if (role.user_count > 0) { %>
                      <span class="badge bg-success"><%= role.user_count %></span>
                    <% } else { %>
                      <span class="text-muted">0</span>
                    <% } %>
                  </td>
                  <td>
                    <small class="text-muted">
                      <%= new Date(role.created_at).toLocaleDateString() %>
                    </small>
                  </td>
                  <td class="text-end">
                    <div class="btn-group btn-group-sm">
                      <a href="/roles/<%= role.id %>" class="btn btn-outline-primary" title="View Details">
                        <i class="bi bi-eye"></i>
                      </a>
                      <% if (!role.is_system && (user.is_superuser || user.capabilities.includes('roles:write'))) { %>
                      <a href="/roles/<%= role.id %>/edit" class="btn btn-outline-secondary" title="Edit">
                        <i class="bi bi-pencil"></i>
                      </a>
                      <% } %>
                      <% if (!role.is_system && (user.is_superuser || user.capabilities.includes('roles:delete'))) { %>
                      <button 
                        class="btn btn-outline-danger" 
                        title="Delete"
                        data-bs-toggle="modal" 
                        data-bs-target="#deleteModal<%= role.id %>"
                      >
                        <i class="bi bi-trash"></i>
                      </button>
                      <% } %>
                    </div>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } %>

<!-- Delete Confirmation Modals -->
<% roles.forEach(role => { %>
  <% if (!role.is_system) { %>
  <div class="modal fade" id="deleteModal<%= role.id %>" tabindex="-1" aria-labelledby="deleteModalLabel<%= role.id %>" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteModalLabel<%= role.id %>">Delete Role</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete the role <strong><%= role.name %></strong>?</p>
          <% if (role.user_count > 0) { %>
          <div class="alert alert-warning mb-0">
            <i class="bi bi-exclamation-triangle me-1"></i>
            This role is assigned to <%= role.user_count %> user<%= role.user_count === 1 ? '' : 's' %>. Deleting this role will remove it from all assigned users.
          </div>
          <% } else { %>
          <p class="text-muted mb-0">This action cannot be undone.</p>
          <% } %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <form method="POST" action="/roles/<%= role.id %>/delete" style="display: inline;">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <% } %>
<% }); %>

<!-- Toast Notifications -->
<% if (success) { %>
<div class="toast-container position-fixed bottom-0 start-0 p-3">
  <div class="toast show" role="alert">
    <div class="toast-header bg-success text-white">
      <i class="bi bi-check-circle me-2"></i>
      <strong class="me-auto">Success</strong>
      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
    </div>
    <div class="toast-body">
      <%= success %>
    </div>
  </div>
</div>
<script>
  setTimeout(() => {
    document.querySelector('.toast').classList.remove('show');
  }, 5000);
</script>
<% } %>

<% if (error) { %>
<div class="toast-container position-fixed bottom-0 start-0 p-3">
  <div class="toast show" role="alert">
    <div class="toast-header bg-danger text-white">
      <i class="bi bi-exclamation-circle me-2"></i>
      <strong class="me-auto">Error</strong>
      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
    </div>
    <div class="toast-body">
      <%= error %>
    </div>
  </div>
</div>
<script>
  setTimeout(() => {
    document.querySelector('.toast').classList.remove('show');
  }, 5000);
</script>
<% } %>

      </main>
    </div>
  </div>
</body>
<%- include('../partials/footer') %>
