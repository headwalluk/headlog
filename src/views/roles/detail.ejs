<%- include('../partials/head', { title: 'Role: ' + role.name }) %>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('../partials/header') %>
    </div>
    <div class="row">
      <%- include('../partials/sidebar', { user, navigationMenu, currentPath: '/roles' }) %>
      
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <!-- Page Header -->
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <div>
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb mb-2">
                <li class="breadcrumb-item"><a href="/roles">Roles</a></li>
                <li class="breadcrumb-item active"><%= role.name %></li>
              </ol>
            </nav>
            <h1 class="h2">
              <i class="bi bi-shield-lock text-primary"></i> <%= role.name %>
              <% if (role.is_system) { %>
                <span class="badge bg-secondary ms-2">System</span>
              <% } %>
            </h1>
          </div>
          <div class="btn-toolbar mb-2 mb-md-0">
            <% if (!role.is_system && canEdit) { %>
            <a href="/roles/<%= role.id %>/edit" class="btn btn-sm btn-secondary me-2">
              <i class="bi bi-pencil"></i> Edit
            </a>
            <% } %>
            <% if (!role.is_system && canDelete) { %>
            <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
              <i class="bi bi-trash"></i> Delete
            </button>
            <% } %>
            <% if (canManageCapabilities) { %>
            <a href="/roles/<%= role.id %>/capabilities" class="btn btn-sm btn-primary ms-2">
              <i class="bi bi-gear"></i> Manage Capabilities
            </a>
            <% } %>
          </div>
        </div>

        <div class="row">
          <!-- Left Column -->
          <div class="col-md-6 mb-4">
            <!-- Role Information Card -->
            <div class="card mb-4">
              <div class="card-header">
                <h5 class="card-title mb-0">Role Information</h5>
              </div>
              <div class="card-body">
                <table class="table table-sm mb-0">
                  <tbody>
                    <tr>
                      <th style="width: 40%;">Name:</th>
                      <td><code><%= role.name %></code></td>
                    </tr>
                    <tr>
                      <th>Description:</th>
                      <td><%= role.description %></td>
                    </tr>
                    <tr>
                      <th>Type:</th>
                      <td>
                        <% if (role.is_system) { %>
                          <span class="badge bg-secondary">System Role</span>
                        <% } else { %>
                          <span class="badge bg-info">Custom Role</span>
                        <% } %>
                      </td>
                    </tr>
                    <tr>
                      <th>Created:</th>
                      <td><%= new Date(role.created_at).toLocaleString() %></td>
                    </tr>
                    <% if (role.updated_at) { %>
                    <tr>
                      <th>Last Updated:</th>
                      <td><%= new Date(role.updated_at).toLocaleString() %></td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>

            <!-- Statistics Card -->
            <div class="card">
              <div class="card-header">
                <h5 class="card-title mb-0">Statistics</h5>
              </div>
              <div class="card-body">
                <div class="row text-center">
                  <div class="col-6 mb-3">
                    <div class="border rounded p-3">
                      <h3 class="mb-0"><%= capabilities.length %></h3>
                      <small class="text-muted">Capabilities</small>
                    </div>
                  </div>
                  <div class="col-6 mb-3">
                    <div class="border rounded p-3">
                      <h3 class="mb-0"><%= userCount %></h3>
                      <small class="text-muted">Users</small>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Right Column -->
          <div class="col-md-6 mb-4">
            <!-- Assigned Capabilities -->
            <div class="card">
              <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Assigned Capabilities</h5>
                <% if (canManageCapabilities) { %>
                <a href="/roles/<%= role.id %>/capabilities" class="btn btn-sm btn-primary">
                  <i class="bi bi-gear"></i> Manage
                </a>
                <% } %>
              </div>
              <% if (capabilities.length === 0) { %>
              <div class="card-body">
                <p class="text-muted mb-0">No capabilities assigned to this role.</p>
              </div>
              <% } else { %>
              <div class="list-group list-group-flush">
                <%
                // Group capabilities by category
                const grouped = {};
                capabilities.forEach(cap => {
                  if (!grouped[cap.category]) {
                    grouped[cap.category] = [];
                  }
                  grouped[cap.category].push(cap);
                });

                Object.keys(grouped).sort().forEach(category => {
                %>
                  <div class="list-group-item">
                    <h6 class="mb-2 text-uppercase text-muted" style="font-size: 0.75rem;">
                      <%= category %>
                    </h6>
                    <div class="d-flex flex-wrap gap-2">
                      <% grouped[category].forEach(cap => { %>
                        <span class="badge <%= cap.is_dangerous ? 'bg-danger' : 'bg-primary' %>" title="<%= cap.description %>">
                          <%= cap.name %>
                        </span>
                      <% }); %>
                    </div>
                  </div>
                <% }); %>
              </div>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Users with this Role -->
        <% if (users.length > 0) { %>
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="card-title mb-0">Users with this Role (<%= users.length %>)</h5>
          </div>
          <div class="table-responsive">
            <table class="table table-sm mb-0">
              <thead class="table-light">
                <tr>
                  <th>Username</th>
                  <th>Email</th>
                  <th>Status</th>
                  <th>Assigned</th>
                  <th class="text-end">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(u => { %>
                <tr>
                  <td>
                    <a href="/users/<%= u.id %>"><%= u.username %></a>
                  </td>
                  <td><%= u.email %></td>
                  <td>
                    <% if (u.is_active) { %>
                      <span class="badge bg-success">Active</span>
                    <% } else { %>
                      <span class="badge bg-secondary">Inactive</span>
                    <% } %>
                  </td>
                  <td>
                    <small class="text-muted">
                      <%= new Date(u.assigned_at).toLocaleDateString() %>
                    </small>
                  </td>
                  <td class="text-end">
                    <a href="/users/<%= u.id %>" class="btn btn-sm btn-outline-primary">
                      <i class="bi bi-eye"></i> View
                    </a>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
        <% } %>

<!-- Delete Confirmation Modal -->
<% if (!role.is_system && canDelete) { %>
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Delete Role</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete the role <strong><%= role.name %></strong>?</p>
        <% if (userCount > 0) { %>
        <div class="alert alert-warning mb-0">
          <i class="bi bi-exclamation-triangle me-1"></i>
          This role is assigned to <%= userCount %> user<%= userCount === 1 ? '' : 's' %>. Deleting this role will remove it from all assigned users.
        </div>
        <% } else { %>
        <p class="text-muted mb-0">This action cannot be undone.</p>
        <% } %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form method="POST" action="/roles/<%= role.id %>/delete" style="display: inline;">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
<% } %>

<!-- Toast Notifications -->
<% if (success) { %>
<div class="toast-container position-fixed bottom-0 start-0 p-3">
  <div class="toast show" role="alert">
    <div class="toast-header bg-success text-white">
      <i class="bi bi-check-circle me-2"></i>
      <strong class="me-auto">Success</strong>
      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
    </div>
    <div class="toast-body">
      <%= success %>
    </div>
  </div>
</div>
<script>
  setTimeout(() => {
    document.querySelector('.toast').classList.remove('show');
  }, 5000);
</script>
<% } %>

<% if (error) { %>
<div class="toast-container position-fixed bottom-0 start-0 p-3">
  <div class="toast show" role="alert">
    <div class="toast-header bg-danger text-white">
      <i class="bi bi-exclamation-circle me-2"></i>
      <strong class="me-auto">Error</strong>
      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
    </div>
    <div class="toast-body">
      <%= error %>
    </div>
  </div>
</div>
<script>
  setTimeout(() => {
    document.querySelector('.toast').classList.remove('show');
  }, 5000);
</script>
<% } %>

      </main>
    </div>
  </div>
</body>
<%- include('../partials/footer') %>
