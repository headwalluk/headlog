<%- include('../partials/head', { title: 'Hosts' }) %>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('../partials/header') %>
    </div>
    <div class="row">
      <%- include('../partials/sidebar', { user, navigationMenu, currentPath: '/hosts' }) %>
      
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <!-- Page Header -->
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">
            <i class="bi bi-hdd-stack"></i> Hosts
          </h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <% if (user.is_superuser || user.capabilities.includes('hosts:write')) { %>
              <a href="/hosts/new" class="btn btn-sm btn-primary text-nowrap">
                <i class="bi bi-plus-circle"></i> Add Host
              </a>
            <% } %>
          </div>
        </div>

        <!-- Search Bar -->
        <div class="row mb-3">
          <div class="col-md-12">
            <form method="GET" action="/hosts" class="row g-2">
              <div class="col-md-9">
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-search"></i></span>
                  <input 
                    type="text" 
                    class="form-control" 
                    name="search" 
                    placeholder="Search by hostname..." 
                    value="<%= search %>"
                  >
                </div>
              </div>
              <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">
                  <i class="bi bi-funnel"></i> Filter
                </button>
                <% if (search) { %>
                  <a href="/hosts" class="btn btn-outline-secondary w-100 mt-1">
                    <i class="bi bi-x-circle"></i> Clear
                  </a>
                <% } %>
              </div>
            </form>
          </div>
        </div>

        <!-- Results Summary -->
        <div class="row mb-3">
          <div class="col-md-12">
            <p class="text-muted">
              Showing <%= hosts.length %> of <%= pagination.totalCount.toLocaleString() %> hosts
              <% if (search) { %>
                matching "<%= search %>"
              <% } %>
            </p>
          </div>
        </div>

        <!-- Hosts Table -->
        <% if (hosts.length === 0) { %>
          <!-- Empty State -->
          <div class="text-center py-5">
            <i class="bi bi-server" style="font-size: 4rem; color: #ccc;"></i>
            <h3 class="mt-3">No Hosts Found</h3>
            <p class="text-muted">
              <% if (search) { %>
                Try adjusting your search terms.
              <% } else { %>
                There are no hosts in the system. Hosts are automatically created when logs are received.
              <% } %>
            </p>
            <% if (search) { %>
              <a href="/hosts" class="btn btn-primary">Clear Search</a>
            <% } else if (user.is_superuser || user.capabilities.includes('hosts:write')) { %>
              <a href="/hosts/new" class="btn btn-primary">Add Host</a>
            <% } %>
          </div>
        <% } else { %>
          <!-- Data Table -->
          <div class="table-responsive">
            <table class="table table-hover table-striped">
              <thead>
                <tr>
                  <th>Hostname</th>
                  <th>Log Count</th>
                  <th>First Seen</th>
                  <th>Last Seen</th>
                  <th class="text-end">Actions</th>
                </tr>
              </thead>
              <tbody>
          <% hosts.forEach(host => { %>
          <tr>
            <td>
              <a href="/hosts/<%= host.id %>">
                <i class="bi bi-server text-primary me-1"></i>
                <strong><%= host.hostname %></strong>
              </a>
            </td>
            <td>
              <% if (host.log_count > 0) { %>
                <span class="badge bg-info"><%= host.log_count.toLocaleString() %></span>
              <% } else { %>
                <span class="text-muted">0</span>
              <% } %>
            </td>
            <td>
              <small class="text-muted">
                <%= new Date(host.first_seen_at).toLocaleString() %>
              </small>
            </td>
            <td>
              <small class="text-muted">
                <%= new Date(host.last_seen_at).toLocaleString() %>
              </small>
            </td>
            <td class="text-end">
              <div class="btn-group btn-group-sm">
                <a href="/hosts/<%= host.id %>" class="btn btn-outline-primary" title="View Details">
                  <i class="bi bi-eye"></i>
                </a>
                <% if (user.is_superuser || user.capabilities.includes('hosts:write')) { %>
                <a href="/hosts/<%= host.id %>/edit" class="btn btn-outline-secondary" title="Edit">
                  <i class="bi bi-pencil"></i>
                </a>
                <% } %>
                <% if (user.is_superuser || user.capabilities.includes('hosts:delete')) { %>
                <button 
                  class="btn btn-outline-danger" 
                  title="Delete"
                  data-bs-toggle="modal" 
                  data-bs-target="#deleteModal<%= host.id %>"
                >
                  <i class="bi bi-trash"></i>
                </button>
                <% } %>
              </div>
            </td>
          </tr>
          <% }); %>
              </tbody>
            </table>
          </div>
        <% } %>

        <!-- Pagination -->
        <% if (pagination.totalPages > 1) { %>
        <nav aria-label="Host pagination" class="mt-3">
          <ul class="pagination justify-content-center">
          <!-- Previous Button -->
          <li class="page-item <%= pagination.currentPage === 1 ? 'disabled' : '' %>">
            <a class="page-link" href="?page=<%= pagination.currentPage - 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">
              Previous
            </a>
          </li>

          <!-- Page Numbers -->
          <% 
          const startPage = Math.max(1, pagination.currentPage - 2);
          const endPage = Math.min(pagination.totalPages, pagination.currentPage + 2);
          
          if (startPage > 1) { %>
            <li class="page-item">
              <a class="page-link" href="?page=1<%= search ? '&search=' + encodeURIComponent(search) : '' %>">1</a>
            </li>
            <% if (startPage > 2) { %>
            <li class="page-item disabled"><span class="page-link">...</span></li>
            <% } %>
          <% }
          
          for (let i = startPage; i <= endPage; i++) { %>
            <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %><%= search ? '&search=' + encodeURIComponent(search) : '' %>"><%= i %></a>
            </li>
          <% }
          
          if (endPage < pagination.totalPages) { %>
            <% if (endPage < pagination.totalPages - 1) { %>
            <li class="page-item disabled"><span class="page-link">...</span></li>
            <% } %>
            <li class="page-item">
              <a class="page-link" href="?page=<%= pagination.totalPages %><%= search ? '&search=' + encodeURIComponent(search) : '' %>"><%= pagination.totalPages %></a>
            </li>
          <% } %>

          <!-- Next Button -->
          <li class="page-item <%= pagination.currentPage === pagination.totalPages ? 'disabled' : '' %>">
            <a class="page-link" href="?page=<%= pagination.currentPage + 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">
              Next
            </a>
          </li>
          </ul>
        </nav>
        <% } %>

<!-- Delete Confirmation Modals -->
<% hosts.forEach(host => { %>
<div class="modal fade" id="deleteModal<%= host.id %>" tabindex="-1" aria-labelledby="deleteModalLabel<%= host.id %>" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel<%= host.id %>">Delete Host</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete the host <strong><%= host.hostname %></strong>?</p>
        <% if (host.log_count > 0) { %>
        <div class="alert alert-warning mb-0">
          <i class="bi bi-exclamation-triangle me-1"></i>
          This host has <%= host.log_count.toLocaleString() %> associated log records and cannot be deleted.
        </div>
        <% } else { %>
        <p class="text-muted mb-0">This action cannot be undone.</p>
        <% } %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <% if (host.log_count === 0) { %>
        <form method="POST" action="/hosts/<%= host.id %>/delete" style="display: inline;">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <% } %>
      </div>
    </div>
  </div>
</div>
<% }); %>

<!-- Toast Notifications -->
<% if (success) { %>
<div class="toast-container position-fixed bottom-0 start-0 p-3">
  <div class="toast show" role="alert">
    <div class="toast-header bg-success text-white">
      <i class="bi bi-check-circle me-2"></i>
      <strong class="me-auto">Success</strong>
      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
    </div>
    <div class="toast-body">
      <%= success %>
    </div>
  </div>
</div>
<script>
  setTimeout(() => {
    document.querySelector('.toast').classList.remove('show');
  }, 5000);
</script>
<% } %>

<% if (error) { %>
<div class="toast-container position-fixed bottom-0 start-0 p-3">
  <div class="toast show" role="alert">
    <div class="toast-header bg-danger text-white">
      <i class="bi bi-exclamation-circle me-2"></i>
      <strong class="me-auto">Error</strong>
      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
    </div>
    <div class="toast-body">
      <%= error %>
    </div>
  </div>
</div>
<script>
  setTimeout(() => {
    document.querySelector('.toast').classList.remove('show');
  }, 5000);
</script>
<% } %>

      </main>
    </div>
  </div>
</body>
<%- include('../partials/footer') %>
