<%- include('../partials/head', { title: 'Websites' }) %>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('../partials/header') %>
    </div>
    <div class="row">
      <%- include('../partials/sidebar', { user, navigationMenu, currentPath: '/websites' }) %>
      
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <!-- Page Header -->
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">
            <i class="bi bi-globe"></i> Websites
          </h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <% if (user.is_superuser || user.capabilities.includes('websites:write')) { %>
              <a href="/websites/new" class="btn btn-sm btn-primary text-nowrap">
                <i class="bi bi-plus-circle"></i> Create Website
              </a>
            <% } %>
          </div>
        </div>

        <!-- Search Bar -->
        <div class="row mb-3">
          <div class="col-md-12">
            <form method="GET" action="/websites" class="row g-2">
              <div class="col-md-9">
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-search"></i></span>
                  <input 
                    type="text" 
                    class="form-control" 
                    name="search" 
                    placeholder="Search by domain..." 
                    value="<%= search %>"
                  >
                </div>
              </div>
              <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">
                  <i class="bi bi-funnel"></i> Filter
                </button>
                <% if (search) { %>
                  <a href="/websites" class="btn btn-outline-secondary w-100 mt-1">
                    <i class="bi bi-x-circle"></i> Clear
                  </a>
                <% } %>
              </div>
            </form>
          </div>
        </div>

        <!-- Results Summary -->
        <div class="row mb-3">
          <div class="col-md-12">
            <p class="text-muted">
              Showing <%= websites.length %> of <%= pagination.totalCount.toLocaleString() %> websites
              <% if (search) { %>
                matching "<%= search %>"
              <% } %>
            </p>
          </div>
        </div>

        <!-- Websites Table -->
        <% if (websites.length === 0) { %>
          <!-- Empty State -->
          <div class="text-center py-5">
            <i class="bi bi-globe" style="font-size: 4rem; color: #ccc;"></i>
            <h3 class="mt-3">No Websites Found</h3>
            <p class="text-muted">
              <% if (search) { %>
                Try adjusting your search terms.
              <% } else { %>
                There are no websites in the system. Websites are automatically created when logs are received.
              <% } %>
            </p>
            <% if (search) { %>
              <a href="/websites" class="btn btn-primary">Clear Search</a>
            <% } else if (user.is_superuser || user.capabilities.includes('websites:write')) { %>
              <a href="/websites/new" class="btn btn-primary">Create Website</a>
            <% } %>
          </div>
        <% } else { %>
          <!-- Data Table -->
          <div class="table-responsive">
            <table class="table table-hover table-striped">
              <thead>
                <tr>
                  <th>Domain</th>
                  <th>SSL</th>
                  <th>Environment</th>
                  <th>Owner Email</th>
                  <th>Log Count</th>
                  <th>Last Activity</th>
                  <th>Created</th>
                  <th class="text-end">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% for (var i = 0; i < websites.length; i++) { %>
                  <% var website = websites[i]; %>
                  <tr>
                    <td>
                      <a href="/websites/<%= website.id %>" class="text-decoration-none">
                        <strong><%= website.domain %></strong>
                      </a>
                    </td>
                    <td>
                      <% if (website.is_ssl) { %>
                        <span class="badge bg-success"><i class="bi bi-lock-fill"></i> HTTPS</span>
                      <% } else { %>
                        <span class="badge bg-warning"><i class="bi bi-unlock-fill"></i> HTTP</span>
                      <% } %>
                    </td>
                    <td>
                      <% if (website.is_dev) { %>
                        <span class="badge bg-info">Development</span>
                      <% } else { %>
                        <span class="badge bg-primary">Production</span>
                      <% } %>
                    </td>
                    <td>
                      <% if (website.owner_email) { %>
                        <small><%= website.owner_email %></small>
                      <% } else { %>
                        <small class="text-muted">Not set</small>
                      <% } %>
                    </td>
                    <td>
                      <span class="badge bg-secondary"><%= (website.log_count || 0).toLocaleString() %></span>
                    </td>
                    <td>
                      <% if (website.last_activity_at) { %>
                        <small><%= new Date(website.last_activity_at).toLocaleString() %></small>
                      <% } else { %>
                        <small class="text-muted">Never</small>
                      <% } %>
                    </td>
                    <td>
                      <small><%= new Date(website.created_at).toLocaleDateString() %></small>
                    </td>
                    <td class="text-end">
                      <div class="btn-group btn-group-sm">
                        <a href="/websites/<%= website.id %>" class="btn btn-outline-primary text-nowrap" title="View Details">
                          <i class="bi bi-eye"></i>
                        </a>
                        <% if (user.is_superuser || user.capabilities.includes('websites:write')) { %>
                          <a href="/websites/<%= website.id %>/edit" class="btn btn-outline-secondary text-nowrap" title="Edit">
                            <i class="bi bi-pencil"></i>
                          </a>
                        <% } %>
                        <% if (user.is_superuser || user.capabilities.includes('websites:delete')) { %>
                          <button 
                            class="btn btn-outline-danger text-nowrap" 
                            title="Delete"
                            onclick="confirmDelete(<%= website.id %>, '<%= website.domain %>')"
                          >
                            <i class="bi bi-trash"></i>
                          </button>
                        <% } %>
                      </div>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <% if (pagination.totalPages > 1) { %>
            <nav aria-label="Website pagination">
              <ul class="pagination justify-content-center">
                <!-- Previous -->
                <li class="page-item <%= pagination.currentPage === 1 ? 'disabled' : '' %>">
                  <a class="page-link" href="?page=<%= pagination.currentPage - 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">
                    Previous
                  </a>
                </li>

                <!-- Page Numbers -->
                <% 
                  var startPage = Math.max(1, pagination.currentPage - 2);
                  var endPage = Math.min(pagination.totalPages, pagination.currentPage + 2);
                %>
                
                <% if (startPage > 1) { %>
                  <li class="page-item">
                    <a class="page-link" href="?page=1<%= search ? '&search=' + encodeURIComponent(search) : '' %>">1</a>
                  </li>
                  <% if (startPage > 2) { %>
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                  <% } %>
                <% } %>

                <% for (var p = startPage; p <= endPage; p++) { %>
                  <li class="page-item <%= p === pagination.currentPage ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= p %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">
                      <%= p %>
                    </a>
                  </li>
                <% } %>

                <% if (endPage < pagination.totalPages) { %>
                  <% if (endPage < pagination.totalPages - 1) { %>
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                  <% } %>
                  <li class="page-item">
                    <a class="page-link" href="?page=<%= pagination.totalPages %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">
                      <%= pagination.totalPages %>
                    </a>
                  </li>
                <% } %>

                <!-- Next -->
                <li class="page-item <%= pagination.currentPage === pagination.totalPages ? 'disabled' : '' %>">
                  <a class="page-link" href="?page=<%= pagination.currentPage + 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">
                    Next
                  </a>
                </li>
              </ul>
            </nav>
          <% } %>
        <% } %>
      </main>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title" id="deleteModalLabel">
            <i class="bi bi-exclamation-triangle"></i> Confirm Deletion
          </h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete the website <strong id="deleteWebsiteDomain"></strong>?</p>
          <p class="text-danger">
            <i class="bi bi-exclamation-triangle"></i>
            <strong>Warning:</strong> This will permanently delete all associated log records.
          </p>
          <p>This action cannot be undone.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <form id="deleteForm" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-danger">
              <i class="bi bi-trash"></i> Delete Website
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Toast Container -->
  <div class="position-fixed bottom-0 start-0 p-3" style="z-index: 11">
    <% if (typeof success !== 'undefined' && success) { %>
      <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header bg-success text-white">
          <i class="bi bi-check-circle me-2"></i>
          <strong class="me-auto">Success</strong>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
          <%= success %>
        </div>
      </div>
    <% } %>
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header bg-danger text-white">
          <i class="bi bi-exclamation-triangle me-2"></i>
          <strong class="me-auto">Error</strong>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
          <%= error %>
        </div>
      </div>
    <% } %>
  </div>

  <script>
    function confirmDelete(id, domain) {
      document.getElementById('deleteWebsiteDomain').textContent = domain;
      document.getElementById('deleteForm').action = '/websites/' + id + '/delete';
      
      var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
      modal.show();
    }

    // Auto-show toasts
    document.addEventListener('DOMContentLoaded', function() {
      var toasts = document.querySelectorAll('.toast');
      toasts.forEach(function(toast) {
        var bsToast = new bootstrap.Toast(toast, { delay: 5000 });
        bsToast.show();
      });
    });
  </script>

  <%- include('../partials/footer') %>
</body>
</html>
